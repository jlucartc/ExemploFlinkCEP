<configuration>
    <appender name="file" class="ch.qos.logback.core.FileAppender">
        <file>${log.file}</file>
        <append>false</append>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{60} %X{sourceThread} - %msg%n</pattern>
        </encoder>
    </appender>

    <logger name="org.apache.flink.api.common" level="OFF"/>
    <logger name="o.a.f.a.java.typeutils.TypeExtractor" level="OFF"/>



    <root level="DEBUG">
        <appender-ref ref="file"/>
    </root>
</configuration>